
<div class="card my-3" id="<%= dom_id blog %>">
  <%# <img src="..." class="card-img-top" alt="..."> %>
  <div class="card-body">
    <h5 class="card-title">
      <%= blog.title %>
    </h5>
    <p class="card-text"></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= blog.body %></li>
  </ul>
  <div class="card-body">
    <%= link_to "All Blogs", blogs_path, class: "btn btn-dark" unless current_page?(blogs_path)%>
    <%= link_to "View", blog_path(blog), class: "btn btn-success"%>
    <%= link_to "Edit", edit_blog_path(blog), class: "btn btn-warning"%>
    <%= button_to "Delete", @blog, method: :delete, class: "btn btn-danger"%>
  </div>
</div>
